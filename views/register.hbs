<div class="row mt-8">
  <div class="col-md-7 m-auto">
    <div class="login-card card card-body">
      <h1 class="text-center mt-3">註冊會員</h1>
      {{> message}}
      <form action="/users/register" method="POST">
        <div class="mb-3">
          <label for="name" class="mb-2">名稱 <span class="require">*</span></label>
          <input type="text" id="name" name="name" class="form-control" placeholder="請輸入名稱" value="{{ name }}">
        </div>
        <div class="mb-3">
          <label for="email" class="mb-2">信箱 <span class="require">*</span></label>
          <input type="email" id="email" name="email" class="form-control" placeholder="請輸入信箱" value="{{ email }}">
        </div>
        <div class="mb-3">
          <label for="password" class="mb-2">密碼 <span class="require">*</span></label>
          <input type="password" id="password" name="password" class="form-control" placeholder="請輸入密碼"
            value="{{ password }}">
        </div>
        <div class="mb-4">
          <label for="confirmPassword" class="mb-2">確認密碼 <span class="require">*</span></label>
          <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" placeholder="請再次輸入密碼"
            value="{{ confirmPassword }}">
        </div>
        <div class="mb-2">
          <button type="submit" class="sign-in-btn btn btn-success">註冊</button>
        </div>
        <div>
          <a href="/auth/facebook" class="fb-btn btn btn-info"><i class="fa-brands fa-facebook"></i> Facebook</a>
        </div>
      </form>
      <p class="lead mt-4">
        已經註冊過了嗎? <a href="/users/login">登入</a>
      </p>
    </div>
  </div>
</div>